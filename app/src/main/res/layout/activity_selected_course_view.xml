<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title: Available instructors and courses for selected course name -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Instructorlist"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="14dp" />
<!--    android:drawableStart="@drawable/coach"-->

    <!-- CardView for containing the table and pagination controls -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:id="@+id/instructors"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select any instructor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="16dp" />
<!--        android:drawableStart="@drawable/selectall"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Table for displaying course details -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/courseDetailsTable"
                android:clickable="true"
                android:divider="@color/black"
                android:layout_margin="20dp"
                android:stretchColumns="*">

                <!-- Table Headers -->
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructor Name"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:divider="@color/black"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No of Sessions"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rating"
                        android:textStyle="bold"
                        android:padding="8dp" />
                </TableRow>

                <!-- Table Rows (Dynamically generated in Java code) -->

            </TableLayout>

            <!-- Pagination Controls -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:onClick="onPreviousPageClick"
                    android:enabled="false" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Page 1"
                    android:gravity="center"
                    android:layout_weight="1" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:onClick="onNextPageClick" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_below="@id/instructors"
        android:layout_marginTop="16dp">
        <!-- res/layout/custom_expandable_card.xml -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- Instructor Name in Bold -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/instructor_name"
                android:textStyle="bold"
                android:padding="16dp" />

            <!-- Total Number of Sessions in Bold -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/no_of_sessions"
                android:textStyle="bold"
                android:padding="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/sessionsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <!-- Add these buttons below the RecyclerView in custom_expandable_card.xml -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/buttonSetAsGoal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set as Goal"
                    android:onClick="onSetAsGoalClick"
                    android:layout_margin="8dp"/>

                <Button
                    android:id="@+id/buttonEnroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enroll"
                    android:onClick="onEnrollClick"
                    android:layout_margin="8dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
